<form method="post" action="/users/register">
  <header class="row my-3 mx-auto col-12 col-lg-7 justify-content-center">
    <h2 class="ps-1">Register</h2>
  </header>
  {{> message }}
  <div class="row my-3 justify-content-center">
    <label for="username" class="col-sm-2 col-form-label">User Name</label>
    <div class="col-sm-10 col-lg-5">
      <input type="text" class="form-control" id="username" name="username" value="{{username}}">
    </div>
  </div>
  <div class="row my-3 justify-content-center">
    <label for="email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10 col-lg-5">
      <input type="email" class="form-control" id="email" name="email" value="{{email}}">
    </div>
  </div>
  <div class="row my-3 justify-content-center">
    <label for="password" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10 col-lg-5">
      <input type="password" class="form-control" id="password" name="password" value="{{password}}" required>
    </div>
  </div>
  <div class="row my-3 justify-content-center">
    <label for="confirmPassword" class="col-sm-2 col-form-label">Confirm Password</label>
    <div class="col-sm-10 col-lg-5">
      <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
        value="{{confirmPassword}}" required>
    </div>
  </div>
  <div class="row col-12 col-lg-7 my-3 mx-auto py-0 justify-content-end">
    <a href="/users/login" class="ms-2 me-1 col-3 col-lg-2 btn btn-secondary">
      Cancel
    </a>
    <button type="submit" class="ms-2 me-1 col-3 col-lg-2 btn btn-primary">Register</button>
  </div>
</form>