
<form method="post" action="/users/login">
  <header class="row my-3 mx-auto col-12 col-lg-7 justify-content-center">
    <h2 class="ps-1">Login</h2>
  </header>
  {{> message }}
  <div class="row my-3 justify-content-center">
    <label for="email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10 col-lg-5">
      <input type="email" class="form-control" id="email" name="email" value="{{#if email}}{{email}}{{else}}user1@example.com{{/if}}">
    </div>
  </div>
  <div class="row my-3 justify-content-center">
    <label for="password" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10 col-lg-5">
      <input type="password" class="form-control" id="password" name="password" value="{{#if password}}{{password}}{{else}}12345678{{/if}}" required>
    </div>
  </div>
  <div class="row col-12 col-lg-7 my-3 mx-auto py-0 justify-content-end">
    <p class="ps-1 text-end">Not a member? <a href="/users/register">Register</a> now!</p>
    <button type="submit" class="my-1 btn btn-success">Login</button>
    <a href="/auth/facebook" class="my-1 btn btn-primary">
      Login via Facebook
    </a>
  </div>
</form>